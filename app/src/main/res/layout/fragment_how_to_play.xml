<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.howtoplay.HowToPlayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Play Abalone"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Game Objective -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 Game Objective"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Be the first player to push 6 of your opponent's marbles off the board. Each player starts with 14 marbles - Black goes first."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Basic Setup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Basic Setup"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• The game is played on a hexagonal board with 61 positions\n• Each player starts with 14 marbles\n• Black marbles are positioned on one side, White on the opposite\n• The center area remains empty at the start"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    ⚪ ⚪ ⚪\n   ⚪ ⚪ ⚪ ⚪\n  ⚪ ⚪ ⚪ ⚪ ⚪\n ◯ ◯ ◯ ◯ ◯ ◯\n◯ ◯ ◯ ◯ ◯ ◯ ◯\n ◯ ◯ ◯ ◯ ◯ ◯\n  ⚫ ⚫ ⚫ ⚫ ⚫\n   ⚫ ⚫ ⚫ ⚫\n    ⚫ ⚫ ⚫"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:fontFamily="monospace"
                android:background="@color/background_dark"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Types of Moves -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔄 Types of Moves"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Single Marble Move"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move one marble to any adjacent empty space in any of the 6 directions."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Column Move (In-line)"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move 2 or 3 marbles in a straight line forward along their axis. This can be used to push opponent marbles."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Broadside Move"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move 2 or 3 marbles sideways together. All marbles must move to adjacent empty spaces. Cannot push opponent marbles."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Sumito (Pushing) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💪 Sumito (Pushing)"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When you have more marbles in a line than your opponent, you can push their marbles:"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫⚫ → ⚪    (2 vs 1 push)\n⚫⚫⚫ → ⚪    (3 vs 1 push)\n⚫⚫⚫ → ⚪⚪    (3 vs 2 push)"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Pushing Rules:"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Only in-line moves can push (not broadside)\n• Need numerical advantage (more marbles than opponent)\n• Cannot push 3 opponent marbles\n• Cannot push marbles that are blocked by other marbles"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- How to Play (Controls) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎮 Game Controls"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Select Marbles"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap on your marbles to select them. Selected marbles will be highlighted. You can select 1-3 marbles in a line."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Make a Move"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After selecting marbles, tap on a valid destination. Valid moves will be indicated by highlight. Invalid moves will be ignored."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Game Buttons"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Reset: Start a new game\n• Clear: Deselect all marbles\n• Undo: Take back your last move (Debug mode only)\n• Log Critical Move: Save problematic moves for debugging"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Game Modes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎲 Game Modes"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Player vs Player: Two human players take turns\n• Player vs AI: Play against computer opponent with 3 difficulty levels\n• Online Multiplayer: Play against other players over the internet"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Tips and Strategy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 Tips &amp; Strategy"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Control the center: Central positions give you more movement options\n• Create formations: Keep your marbles connected for stronger pushes\n• Protect the edges: Don't let opponent marbles get behind yours\n• Plan ahead: Think about your opponent's possible responses\n• Use numerical advantage: Group 2-3 marbles to overpower single opponent marbles"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Visual Examples Note -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/accent_primary"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📚 Learn by Playing"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The best way to learn Abalone is by playing! Start with Player vs Player mode to understand the basic moves, then challenge the AI opponent."
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>